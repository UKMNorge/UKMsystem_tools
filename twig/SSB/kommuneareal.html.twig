<p>
    Kommuneareal brukes til beregninger for deltakelse,
            og ble sist importert for
    {{ SSB_kommuneareal.getLatestYearUpdated() }}.
</p>
{% if SSB_kommuneareal.getMissingYears()|length > 0 %}
    <p>
        <strong class="text-danger">OBS! Data mangler for Ã¥rene
            {% for year in SSB_kommuneareal.getMissingYears() %}
                {{ year }}{{ loop.last ? '' : ', ' }}
            {% endfor %}
        </strong>
    </p>
{% endif %}

<p style="margin-bottom: 0;">
    Importer data for
</p>
<form method="POST" action="?page={{ GET('page') }}">
    <div class="form-group" style="margin-top: 0;">
        <select class="form-control" id="year" name="areal_year">
            {% for year in now|date("Y")..2000 %}
                <option value="{{ year }}">{{ year }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="form-group">
        <button class="btn btn-primary btn-xs" type="submit">Start import fra SSB</button>
        <span class="text-muted">(dette kan ta noe tid)</span>
    </div>
</form>

{% if SSB_kommuneareal_log is defined %}
    <ol class="list-group">
       {% for entry in SSB_kommuneareal_log %}
			{% if entry is iterable %}
				{% for logentry in entry %}
					<li class="list-group-item text-{{ logentry.success ? 'success' : 'danger' }}">
						ID {{ logentry.id }} - {{ logentry.message }}
					</li>
				{% endfor %}	
			{% else %}
				<li class="list-group-item">{{ entry|raw }}</li>
			{% endif %}
		{% endfor %}
    </ol>
{% endif %}